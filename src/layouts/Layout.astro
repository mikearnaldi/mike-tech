  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <div class="min-h-screen flex flex-col">
      <header class="border-b border-gray-200 dark:border-gray-800">
        <nav class="max-w-4xl mx-auto px-4 py-6">
          <div class="flex items-center justify-between">
            <a href="/" class="text-xl font-bold hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
              Mike's Tech
            </a>
            <div class="space-x-6">
              <a href="/blog" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Blog</a>
              <a href="/blog/tags" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Tags</a>
              <a href="/search" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Search</a>
              <a href="/rss.xml" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">RSS</a>
